@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tennis Court Management</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'tennis-green': '#2D5A27',
                        'tennis-yellow': '#FFB800',
                        'tennis-navy': '#1A2238'
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-100">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <div class="bg-tennis-navy text-white w-64 flex-shrink-0">
            <div class="p-4">
                <h2 class="text-2xl font-bold">TennisCourt</h2>
            </div>
            <nav class="mt-4">
                <a href="/Dashboard" class="flex items-center px-4 py-3 hover:bg-tennis-green transition-colors @(ViewData["CurrentPage"]?.ToString() == "Dashboard" ? "bg-tennis-green" : "")">
                    <i class="fas fa-tachometer-alt w-6"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/Bookings" class="flex items-center px-4 py-3 hover:bg-tennis-green transition-colors @(ViewData["CurrentPage"]?.ToString() == "Bookings" ? "bg-tennis-green" : "")">
                    <i class="fas fa-calendar-alt w-6"></i>
                    <span>Bookings</span>
                </a>
                <a href="/Memberships" class="flex items-center px-4 py-3 hover:bg-tennis-green transition-colors @(ViewData["CurrentPage"]?.ToString() == "Memberships" ? "bg-tennis-green" : "")">
                    <i class="fas fa-users w-6"></i>
                    <span>Membership Plans</span>
                </a>
                <a href="/Courts" class="flex items-center px-4 py-3 hover:bg-tennis-green transition-colors @(ViewData["CurrentPage"]?.ToString() == "Courts" ? "bg-tennis-green" : "")">
                    <i class="fas fa-table-tennis w-6"></i>
                    <span>Courts</span>
                </a>
                <a href="/Users" class="flex items-center px-4 py-3 hover:bg-tennis-green transition-colors @(ViewData["CurrentPage"]?.ToString() == "Users" ? "bg-tennis-green" : "")">
                    <i class="fas fa-user w-6"></i>
                    <span>Users</span>
                </a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Top Navigation -->
            <header class="bg-white shadow">
                <div class="px-4 py-3 flex justify-between items-center">
                    <h1 class="text-2xl font-semibold text-gray-800">@ViewData["Title"]</h1>
                    <div class="flex items-center">
                        <span class="text-gray-600 mr-4">Welcome, @User.Identity?.Name</span>
                        <form method="post" action="/Logout" class="inline">
                            <button type="submit" class="text-tennis-navy hover:text-tennis-green transition-colors">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </button>
                        </form>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-100 p-6">
                @RenderBody()
            </main>
        </div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
